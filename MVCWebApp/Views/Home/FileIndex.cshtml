@using Microsoft.Extensions.FileProviders;
@model IEnumerable<IFileInfo>

@{
    ViewData["Title"] = "File Index";
}

<h1>Files available for download</h1>


<table class="table">

    <tbody>
        @foreach (var item in Model.Where(x => x.IsDirectory != true))
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-action="DownloadFile" asp-route-filename="@Url.Content(item.PhysicalPath)">Download File</a>
                </td>
            </tr>
        }
    </tbody>
</table>
